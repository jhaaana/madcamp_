<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 테두리 -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="4dp"
                android:color="#81D4FA" /> <!-- 얼음 색상 테두리 -->
            <corners android:radius="16dp" /> <!-- 둥근 모서리 -->
        </shape>
    </item>

    <!-- 이미지 안에 채우기 -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <gradient
                android:startColor="#B3E5FC"
                android:centerColor="#81D4FA"
                android:endColor="#0288D1"
                android:angle="45" />
            <corners android:radius="12dp" /> <!-- 내부 둥근 모서리 -->
        </shape>
    </item>
</layer-list>
