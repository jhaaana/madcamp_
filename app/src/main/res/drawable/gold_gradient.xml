

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 반투명 외곽선(블러 효과처럼 보이도록) -->
<item>
    <shape>
        <gradient
            android:startColor="#F6D365"
            android:endColor="#9FBAE8"
            android:angle="45" />
        <corners android:radius="12dp" /> <!-- 내부 둥근 모서리 -->
    </shape>
</item>

<!-- 내부 배경 -->
<item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
    <shape>
        <!-- 그라디언트 색상 추가 -->
        <gradient
            android:startColor="#F6D365"
            android:centerColor="#FDA085"
            android:endColor="#9FBAE8"
            android:angle="45" />
        <corners android:radius="12dp" /> <!-- 내부 둥근 모서리 -->
    </shape>
</item>
</layer-list>
